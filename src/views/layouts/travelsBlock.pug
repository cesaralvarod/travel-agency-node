each travel in travels
  .col-md-6.col-lg-4.mb-4
    .card
      img.card-img-top(src=`img/destinos_${travel.imagen}.jpg`)
      .card-body
        h2 #{travel.titulo}
        p
          svg.icon.icon-tabler.icon-tabler-calendar-event(
            xmlns="http://www.w3.org/2000/svg",
            width="24",
            height="24",
            viewbox="0 0 24 24",
            stroke-width="2",
            stroke="#fd0061",
            fill="none",
            stroke-linecap="round",
            stroke-linejoin="round"
          )
            path(stroke="none", d="M0 0h24v24H0z", fill="none")
            rect(x="4", y="5", width="16", height="16", rx="2")
            line(x1="16", y1="3", x2="16", y2="7")
            line(x1="8", y1="3", x2="8", y2="7")
            line(x1="4", y1="11", x2="20", y2="11")
            rect(x="8", y="15", width="2", height="2")
          | #{travel.fecha_ida} - #{travel.fecha_vuelta}
        p
          svg.icon.icon-tabler.icon-tabler-user(
            xmlns="http://www.w3.org/2000/svg",
            width="24",
            height="24",
            viewbox="0 0 24 24",
            stroke-width="2",
            stroke="#fd0061",
            fill="none",
            stroke-linecap="round",
            stroke-linejoin="round"
          )
            path(stroke="none", d="M0 0h24v24H0z", fill="none")
            circle(cx="12", cy="7", r="4")
            path(d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2")
          | #{travel.disponibles} avalaibles
        p= travel.descripcion.substr(0, 100) + '...'
        a.btn.btn-success.btn-block(href=`travels/${travel.slug}`) More Info
