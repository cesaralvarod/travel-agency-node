extends ./layouts/index

block content
  main.container.mt-5
    h1.text-center.mt-5 #{namePage}
    include ./layouts/testimonialsBlock
    .row.mt-4
      h2.d-block.w-100.text-center Add a testimonial
      .row.justify-content-center.col
        .col-md-8
        form.w-100(actiom="/testimonials", method="POST")
          .form-group
            label(for="name") Name:
            input#name.form-control(
              type="text",
              placeholder="Your name",
              name="name",
              value=name
            ) 
          .form-group
            label(for="email") Email:
            input#email.form-control(
              type="text",
              placeholder="Your email",
              name="email",
              value=email
            )
          .form-group
            label(for="message") Message:
            textarea#message.form-control(
              name="message",
              placeholder="Your message"
            )= message
          input.btn.btn-success.btn-block(type="submit")
        .col-md-12.mt-2
          if (errors)
            each error in errors
              .alert.alert-danger.text-center= error.message
